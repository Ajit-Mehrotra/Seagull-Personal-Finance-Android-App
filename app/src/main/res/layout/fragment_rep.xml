<!-- fragment_rep.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange2"
        android:gravity="center"
        android:padding="12dp"
        android:text="Choose your Bank to connect to one of our Seagull Representatives!"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/tvRepName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Representative Name: "
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvRepEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Representative Email: "
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvRepPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Representative Phone: "
        android:textStyle="bold"
        android:textSize="16sp" />

</LinearLayout>
